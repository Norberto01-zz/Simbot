{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/login.js') }}"></script>
{% endblock %}

{% block main %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="row">
        <div class="col-sm-10">
            <div class="well">
                {{ form_start(form) }}
                    <fieldset>
                        <legend><i class="fa fa-users" aria-hidden="true"></i> {{ 'Join the comunity!'|trans }}</legend>
                        <div class="form-group">
                            <label for="fullname">{{ 'Your complete name'|trans }}</label>
                            {{
                                form_widget(
                                    form.fullname, {
                                        'attr': {
                                            'class': 'form-control', 'name': 'fullname', 'id': '_fullname'
                                        }
                                    }
                                )
                            }}
                        </div>
                        <div class="form-group">
                            <label for="username">{{ 'label.username'|trans }}</label>
                            {{
                                form_widget(
                                    form.username, {
                                        'attr': {
                                            'class': 'form-control', 'name': 'username', 'id': '_username'
                                        }
                                    }
                                )
                            }}
                        </div>
                        <div class="form-group">
                            <label for="email">{{ 'Email'|trans }}</label>
                            {{
                                form_widget(
                                    form.email, {
                                        'attr': {
                                            'class': 'form-control', 'name': 'email', 'id': '_email'
                                        }
                                    }
                                )
                            }}
                        </div>
                        <div class="form-group">
                            <label for="password_1">{{ 'label.password'|trans }}</label>
                            {{
                                form_widget(
                                    form.plainPassword.first, {
                                        'attr': {
                                            'class': 'form-control',
                                            'name': 'password_1',
                                            'id': '_password_1'
                                        }
                                    }
                                )
                            }}
                        </div>
                        <div class="form-group">
                            <label for="password_2">Confirm password</label>
                            {{
                                form_widget(
                                    form.plainPassword.second, {
                                        'attr': {
                                            'class': 'form-control',
                                            'name': 'password_2',
                                            'id': '_password_2'
                                        }
                                    }
                                )
                            }}
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-user-plus" aria-hidden="true"></i> Register
                        </button>
                    </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
